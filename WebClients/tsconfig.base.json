{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@admin/auth": ["libs/admin/auth/src/index.ts"],
      "@admin/data-access": ["libs/admin/data-access/src/index.ts"],
      "@admin/common": ["libs/admin/common/src/index.ts"],
      "@perimeter/ngx-auth": ["libs/perimeter/ng-auth/src/index.ts"],
      "@data-avail/ip/auth": ["libs/ip/auth/src/index.ts"],
      "@data-avail/ip/data-access": ["libs/ip/data-access/src/index.ts"],
      "@data-avail/common": ["libs/common/src/index.ts"],
      "@data-avail/perimeter/common": ["libs/perimeter/common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
